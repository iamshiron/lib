{
    "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
    "metadata": [
        {
            "src": [
                {
                    "src": "../src",
                    "files": ["**/*.csproj"],
                    "exclude": ["**/bin/**", "**/obj/**"]
                }
            ],
            "output": "api"
        }
    ],
    "build": {
        "content": [
            {
                "files": ["**/*.{md,yml}"],
                "exclude": ["_site/**"]
            }
        ],
        "resource": [
            {
                "files": ["images/**"]
            }
        ],
        "output": "_site",
        "template": ["default", "modern"],
        "globalMetadata": {
            "_appName": "lib",
            "_appTitle": "lib",
            "_enableSearch": true,
            "pdf": false
        }
    }
}
